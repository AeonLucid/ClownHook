{
    "name": "ClownHook",
    "options": {
        "bundleIdPrefix": "com.aeonlucid.clownhook",
        "transitivelyLinkDependencies": true
    },
    "settings": {
        "LIBRARY_SEARCH_PATHS": [
            "$(inherited)",
            "$(SRCROOT)/lib"
        ]
    },
    "targets": {
        "ClownHookApp_iOS": {
            "type": "application",
            "platform": "iOS",
            "deploymentTarget": "13.0",
            "sources": [
                {
                    "path": "src/ClownHookApp_iOS"
                }
            ],
            "dependencies": [
                {
                    "target": "ClownHook_iOS"
                }
            ]
        },
        "ClownHookApp_macOS": {
            "type": "tool",
            "platform": "macOS",
            "deploymentTarget": "11.2",
            "sources": [
                {
                    "path": "src/ClownHookApp_macOS"
                }
            ],
            "dependencies": [
                {
                    "target": "ClownHook_macOS"
                }
            ],
            "settings": {
                "ENABLE_HARDENED_RUNTIME": "YES",
                "CODE_SIGN_STYLE": "Automatic"
            }
        },
        "ClownHook": {
            "type": "library.static",
            "platform": ["iOS", "macOS"],
            "deploymentTarget": {
                "iOS": "13.0",
                "macOS": "11.2"
            },
            "sources": [
                {
                    "path": "src/ClownHook"
                }
            ],
            "dependencies": [
                {
                    "target": "Unicorn_${platform}"
                },
                {
                    "framework": "libunicorn_${platform}.a",
                    "type": "library.static",
                    "embed": false,
                    "link": true
                }
            ],
            "settings": {
                "HEADER_SEARCH_PATHS": [
                    "submodules/unicorn/include",
                    "$(inherited)"
                ]
            }
        },
        "Unicorn": {
            "type": "",
            "platform": ["iOS", "macOS"],
            "deploymentTarget": {
                "iOS": "13.0",
                "macOS": "11.2"
            },
            "legacy": {
                "toolPath": "$(SRCROOT)/scripts/build_unicorn.sh",
                "workingDirectory": "$(SRCROOT)",
                "passSettings": true
            }
        }
    }
}